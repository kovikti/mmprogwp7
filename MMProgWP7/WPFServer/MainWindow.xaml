<Window x:Class="WPFServer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="328" Width="534"
        Background="Beige">
    <Grid Width="514" Height="292">
        <ListView Height="272" HorizontalAlignment="Left" Margin="0,12,0,0" Name="lvMessages" VerticalAlignment="Top" Width="503" >
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Vertical">
                    </StackPanel>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="{Binding Path=Image}" Margin="2" Stretch="UniformToFill" Width="133" Height="100" ></Image>
                        <StackPanel Orientation="Vertical">
                            <TextBlock Text="{Binding Path=Owner}" Margin="2"></TextBlock>
                            <TextBlock Text="{Binding Path=Text}" Margin="2"></TextBlock>
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Window>
