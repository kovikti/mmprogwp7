<UserControl x:Class="WPFServer.MessageControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:my="clr-namespace:WPFServer"
             DataContext="{Binding RelativeSource={RelativeSource Self}}"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="300"
             Width="438" Height="300">
    <!--<UserControl.Resources>
        <my:MyMessage x:Key="myMessageResource"></my:MyMessage>
    </UserControl.Resources>-->
    <DockPanel  HorizontalAlignment="Stretch" Name="stackPanel1" VerticalAlignment="Stretch" LastChildFill="True">
        <Image  Name="image" Stretch="Uniform" Width="222" Source="{Binding Path=myMessage.Image}" />
        <StackPanel  Name="stackPanel2">
            <TextBlock Height="23" Name="tbOwner" Text="{Binding Path=myMessage.Owner}" /><!---->
            <TextBlock Height="23" Name="tbText" Text="{Binding Path=myMessage.Text}" /> <!---->
            <!--<Rectangle Width="20" Height="10" Fill="Blue"/>-->
        </StackPanel>
    </DockPanel>
</UserControl>
