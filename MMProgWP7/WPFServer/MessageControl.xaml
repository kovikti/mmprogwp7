<UserControl x:Class="WPFServer.MessageControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:my="clr-namespace:WPFServer"
             DataContext="{Binding RelativeSource={RelativeSource Self}}"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="300"
             Width="300" Height="100">
    <!--<UserControl.Resources>
        <my:MyMessage x:Key="myMessageResource"></my:MyMessage>
    </UserControl.Resources>-->
    <StackPanel  HorizontalAlignment="Left" Name="stackPanel1" Orientation="Horizontal">
        <Image Height="100" Name="image" Stretch="Fill" Width="133" Source="{Binding Path=myMessage.Image}" />
        <StackPanel  Name="stackPanel2" Width="155">
            <TextBlock Height="23" Name="tbOwner" Text="{Binding Path=myMessage.Owner}" /><!---->
            <TextBlock Height="23" Name="tbText" Text="{Binding Path=myMessage.Text}" /> <!---->
            <Rectangle Width="20" Height="10" Fill="Blue"/>
        </StackPanel>
    </StackPanel>
</UserControl>
